@model IEnumerable<TShop.ViewModels.CategoryVM>

<div class="sidebar-widget category">
    <h2 class="title">Category</h2>
    <ul>
        @foreach (var item in Model)
        {
            <li><a asp-action="Index" asp-controller="Product" asp-route-categoryId="@item.Id">@item.Name</a><span>(@item.Quantity)</span></li>
        }
    </ul>
</div>