@model IEnumerable<TShop.ViewModels.CartItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Cart Start -->
<div class="cart-page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody class="align-middle">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="#"><img src="~/image/@item.image" alt="Image @item.image"></a></td>
                                    <td><a href="#">@item.Name</a></td>
                                    <td id="Price">$@item.Price</td>
                                    <td>
                                        <div class="qty">
                                            <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                            <input id="quantityInput" type="text" value="@item.Quantity">
                                            <button class="btn-plus" asp-action="AddCart" asp-controller="Cart" asp-route-id="@item.Id" asp-route-quantity="@item.Quantity+1"><i class="fa fa-plus"></i></button>
                                        </div>
                                    </td>
                                    <td id="TotalPrice">$@item.TotalPrice</td>
                                    <td><button><i class="fa fa-trash"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="coupon">
                    <input type="text" placeholder="Coupon Code">
                    <button>Apply Code</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="cart-summary">
                    <div class="cart-content">
                        <h3>Cart Summary</h3>
                        <p>Sub Total<span>$22</span></p>
                        <p>Shipping Cost<span>$1</span></p>
                        <h4 id="GrandTotal">Grand Total<span>$@Model.Sum(x => x.TotalPrice).ToString()</span></h4>
                    </div>
                    <div class="cart-btn">
                        <button>Update Cart</button>
                        <button>Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
@section Scripts
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const minusButtons = document.querySelectorAll(".btn-minus");
            const plusButtons = document.querySelectorAll(".btn-plus");

            minusButtons.forEach(btn => {
                btn.addEventListener("click", function () {
                    var inputElement = document.getElementById('quantityInput');
                    var quantity = parseInt(inputElement.value);
                    console.log("quantity: update--" + quantity);
                    updateTotalPrice(btn, quantity);
                });
            });

            plusButtons.forEach(btn => {
                btn.addEventListener("click", function () {
                    var inputElement = document.getElementById('quantityInput');
                    var quantity = inputElement.value;
                    console.log("quantity: update--" + quantity);
                    updateTotalPrice(btn, quantity);
                });
            });

            function updateTotalPrice(btn, quantity) {
                var totalPriceTd = document.getElementById('TotalPrice');
                var priceTd = document.getElementById('Price');
                var grandTotal = document.getElementById('GrandTotal');

                var priceValue = parseFloat(priceTd.innerText.replace("$", "")) // Lấy giá trị từ innerText và chuyển đổi sang số
                console.log('Giá trị của Price:', priceValue);

                const totalPrice = priceValue * quantity; // Tính toán tổng giá trị
                console.log('totalPrice: ' + totalPrice);

                totalPriceTd.innerText = '$' + totalPrice; // Gán giá trị mới vào phần tử "TotalPrice"
                console.log('totalPriceTd.innerText: ' + totalPrice);

                var priceGrandTotal = parseFloat(grandTotal.innerText.replace("$", ""))
                console.log('Giá trị của priceGrandTotal:', priceGrandTotal);
                grandTotal.innerText = '$' + priceGrandTotal + totalPrice;
                console.log('grandTotal.innerText: ' + totalPrice);
            }
        });
    </script>
}
